# KPOINT API Configuration
KPOINT_BASE_URL=https://ktpl.kpoint.com
KPOINT_CLIENT_ID=your_client_id_here
KPOINT_CLIENT_SECRET=your_client_secret_here

# KPOINT User Email for JWT token generation
KPOINT_USER_EMAIL=your_email@example.com

# Mock Mode - Set to "true" to use mock data instead of real API calls
# Useful for development and testing with public data
KPOINT_MOCK_MODE=true

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# KPOINT Player URL (for generating play links)
KPOINT_PLAYER_BASE_URL=https://ktpl.kpoint.com/web/videos
